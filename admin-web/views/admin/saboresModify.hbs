<div
  style="max-width: 1000px; margin-top: 115px; margin-bottom: 190px;"
  class="container align-items-center bg-white border shadow rounded-3 p-4 agregarnovedades_contenedor"
>

  <div class="mb-3 pb-2 text-center">
    <p class="h2">Editar Sabor</p>
  </div>

  <form class="px-5" method="post" action="/admin/sabores/modificar" enctype="multipart/form-data">
    <input style="display:none" value="{{sabor.id}}" type="text" name="id" />
    <div class="mb-3">
      <input
        placeholder="Sabor"
        value="{{sabor.titulo}}"
        type="text"
        class="form-control"
        name="titulo"
      />
    </div>
    <div class="mb-3">
      <input
        placeholder="Clase de Helado"
        value="{{sabor.subtitulo}}"
        type="text"
        class="form-control"
        name="subtitulo"
      />
    </div>
    <div class="mb-3">
      <span>Imagen:</span>
      <input type="file" class="form-control" name="imagen" />
    </div>
    <input type="hidden" name="img_original" value="{{{sabor.img_id}}}" />

    {{#if error}}
      <p class="mt-3 text-secondary p-3 rounded-3 form_warning">No se ha podido
        modificar el Sabor</p>
    {{/if}}

    <button type="submit" class="btn btn-primary">Modificar</button>
  </form>
</div>